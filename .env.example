# Python settings
PYTHON=python3
PIP=pip3

# Virtual environment
VENV_PATH=./venv
VENV_PYTHON=${VENV_PATH}/bin/python3
VENV_PIP=${VENV_PATH}/bin/pip3

# Project settings
PYTHONPATH=/path/to/project/src

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_FILE=config/credentials.json
GOOGLE_SHEETS_TOKEN_FILE=config/token.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Sheet names
SHOWS_SHEET_NAME=Shows
TEAM_SHEET_NAME=Team Members

# Server settings
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
STREAMLIT_DEBUG=false
STREAMLIT_ALLOW_REMOTE=false

# TMDB API
TMDB_API_KEY=your_tmdb_api_key_here
